.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.authentication-page
  .page-header
    %h1 Sign up

  .alert.alert-danger{ "ng-show": "error" }
    {{ error }}

  %form{ "ng-submit": "register()" }
    .input-group
      %input.form-control{ type: "email", placeholder: "Email", "ng-model": "user.email" }
    .input-group
      %input.form-control{ type: "password", placeholder: "Password", "ng-model": "user.password" }
    %input.btn.btn-success{ type: "submit", value: "Register" }
  %div
    Already have an account?
    %a{ "ui-sref": "login" }
      %u Sign in
